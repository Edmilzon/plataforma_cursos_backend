@baseUrl = http://localhost:5000/admin

# ==============================================================================
# ROLES
# ==============================================================================

### Obtener todos los roles
GET {{baseUrl}}/roles

### Crear un nuevo rol
POST {{baseUrl}}/roles
Content-Type: application/json

{
  "nombre": "Supervisor_Test",
  "descripcion": "Supervisa el contenido y los usuarios de prueba.",
  "icono_url": "/icons/supervisor_test.png"
}

### Obtener un rol por ID
# @name getRoleById
GET {{baseUrl}}/roles/4

### Eliminar un rol
# Reemplaza el 4 con el ID del rol que quieres eliminar
DELETE {{baseUrl}}/roles/4

### Asignar permisos a un rol
# Asigna los permisos con ID 1, 2 y 3 al rol con ID 4
POST {{baseUrl}}/roles/4/permisos
Content-Type: application/json

{
  "permissionIds": [1, 2, 3]
}

### Obtener los permisos de un rol específico
# Reemplaza el 4 con el ID del rol
GET {{baseUrl}}/roles/4/permisos

# ==============================================================================
# PERMISOS
# ==============================================================================

### Obtener todos los permisos
GET {{baseUrl}}/permisos

# ==============================================================================
# USUARIOS
# ==============================================================================

### Obtener todos los usuarios con sus roles
GET {{baseUrl}}/usuarios

### Obtener un usuario por ID
# @name getUserById
GET {{baseUrl}}/usuarios/1

### Actualizar un usuario
# Reemplaza el 1 con el ID del usuario que quieres actualizar
PUT {{baseUrl}}/usuarios/1
Content-Type: application/json

{
  "nombre": "AdminUpdated",
  "correo": "admin.updated@example.com"
}

### Eliminar un usuario
# Reemplaza el 1 con el ID del usuario que quieres eliminar
DELETE {{baseUrl}}/usuarios/1

### Asignar/Actualizar roles a un usuario
# Asigna los roles con ID 1 y 2 al usuario con ID 1
# Si el usuario ya tiene roles, estos serán reemplazados.
# El adminId en la URL debe ser el ID de un usuario administrador existente.
POST {{baseUrl}}/usuarios/1/roles?adminId=1
Content-Type: application/json

{
  "roleIds": [1, 2]
}